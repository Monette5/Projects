							$(".mydrilldown").filter("[data-cat='codyhouse']").find(".image-radio").parent().removeClass('active');
							$(".mydrilldown").filter("[data-cat='codyhouse']").find(".image-radio[value='gooey-transition']").parent().addClass('active');
						}
