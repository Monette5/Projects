	<script>
		if (!{{ trialExpired }} && {{ showUpgrade }}) {
			$(attachTabListeners);
			function attachTabListeners() {
				$("#chooseeffect").getCtrl().onClick(function () {
					$('#tabpanel_main').getCtrl().setValue(1)
