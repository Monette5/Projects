  <hr class="divider-long" />
  <div wix-ctrl="SectionDividerLabeled" id="borderandline2" wix-options="{label: 'Border Options'}"></div>
  <div id="border-color" wix-param="borderColor" wix-ctrl="ColorPickerInput" wix-options="{ title: 'Border Color', startWithColor: 'color-1'}"></div>
  <hr class="divider-long border-color" />
  <div id="border-size" wix-param="borderSize" wix-ctrl="Slider" wix-options="{title: 'Border Size', defaultValue:0, units: ' px', max : 10}"></div>

